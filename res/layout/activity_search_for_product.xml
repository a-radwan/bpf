<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_header_pro"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Search For A Product Using BarCode"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/etxt_barcode"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Bar Code Number"
        android:inputType="number"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold|italic" >

        <requestFocus />
    </EditText>

  

    <Button
        android:id="@+id/btn_search_for_products"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/choose_icon"
        android:gravity="center_horizontal|center_vertical"/>

</LinearLayout>